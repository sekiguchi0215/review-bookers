<p>
	<% if @book.errors.any? %>
		<h4><%= @book.errors.count %>errors</h4>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>
</p>

<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
	<p>Title</p>
	<%= f.text_field :title %>
	<p>Body</p>
	<%= f.text_area :body %>
	<%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book) %>|
<%= link_to "Back", books_path %>
	